{
  "manifest_version": 3,
  "name": "WebCopilot - AI Navigator",
  "version": "4.1.0",
  "description": "Navega la web con lenguaje natural usando IA",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/dom-inspector.js",
        "content/actions.js",
        "content/agent.js",
        "content/widget.js",
        "content/content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "WebCopilot AI Navigator"
  }
}
