{
  "manifest_version": 3,
  "name": "WebCopilot - DOM Inspector",
  "version": "2.1.2",
  "description": "Inspecciona el DOM con Shadow DOM, selecciona elementos y genera referencias estables",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/dom-inspector.js",
        "content/widget.js",
        "content/content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "WebCopilot DOM Inspector"
  }
}
